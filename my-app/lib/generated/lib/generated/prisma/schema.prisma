generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cofrinhos {
  id      Int         @id @default(autoincrement())
  address String      @unique //endere√ßo do contrato no blockchain
  owner   String
  nome    String //do cofrinho
  curador curadores[]
}

model curadores {
  id         Int       @id @default(autoincrement())
  carteira   String
  cofrinho   cofrinhos @relation(fields: [cofrinhoId], references: [id])
  cofrinhoId Int
}

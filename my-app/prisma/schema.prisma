generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cofrinhos {
  id        Int     @id @default(autoincrement())
  address   String  @unique //endereço do contrato no blockchain
  owner     String
  nome      String        //do cofrinho
  curador curadores[] 
}

model curadores {
  id         Int       @id @default(autoincrement())
  carteira   String
  cofrinho   cofrinhos  @relation(fields: [cofrinhoId], references: [id])
  cofrinhoId Int
}

model Proposal {
  id           String        @id @default(cuid())
  vaultAddress String        // Endereço do contrato cofrinho
  title        String        // Descrição da proposta
  createdAt    DateTime      @default(now())
  votes        ProposalVote[]
}

model ProposalVote {
  id         String   @id @default(cuid())
  proposalId String
  wallet     String   // Endereço da carteira que votou

  proposal   Proposal @relation(fields: [proposalId], references: [id])

  @@unique([proposalId, wallet]) // Uma carteira só pode votar uma vez por proposta
}
